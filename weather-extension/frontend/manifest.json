{
  "manifest_version": 3,
  "name": "Weather Widget",
  "version": "1.0",
  "description": "Minimal weather widget in Edge popup.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["geolocation"],
  "host_permissions": ["http://localhost:8080/*"]
}
